{% extends 'base.html.twig' %}
{% block title %}{{ 'add_commune'|trans }}{% endblock %}
{% block body %}
    <div class="container-fluid" style="width: 414px;">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="row">
                    <div class="page_name">{{ 'add_commune'|trans }}</div>
                    {% block main %}
                        {{ form_start(form) }}
                        {{ form_row(form.commune_name) }}
                        {{ form_row(form.user_name) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.agreeTerms) }}
                        {{ form_row(form.plainPassword) }}
                        {{ form_row(form.save) }}
                        {{ form_end(form) }}
                    {% endblock %}
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}